<?xml version="1.0" encoding="UTF-8"?>
<Application
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:tabs="clr-namespace:Naxam.Controls.Forms;assembly=Naxam.TopTabbedPage.Forms"
    x:Class="TopTabbedPageQs.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style
                x:Key="TabsPage"
                TargetType="tabs:TopTabbedPage">
                <Setter
                    Property="BarBackgroundColor"
                    Value="#9C27B0" />
                <Setter
                    Property="BarTextColor"
                    Value="White" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>